import java.util.Scanner;
public class SafeInput
{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        String firstName = "";
        String lastName = "";
        /*firstName = SafeInput.getNonZeroLenString(in, "Enter your first name");
        lastName = SafeInput.getNonZeroLenString(in, "Enter your last name");
        System.out.println("\nYour full name is: " + firstName + " " + lastName);
        */
        int number1 = 0;
        number1 = getInt(in, "Enter your favorite integer: ");
        System.out.println("Your favorite integer is: " + number1);
        double number2 = 0.0;
        number2 = getDouble(in, "Enter your favorite double: ");
        System.out.println("Your favorite double is: " + number2);

        int birthyear = 0;
        birthyear = getRangedInt(in, "Enter your birth year: ", 1950, 2025);
        int birthmonth = 0;
        birthmonth = getRangedInt(in, "Enter your birth month: ", 1, 12);
        int birthday = 0;
        birthday = getRangedInt(in, "Enter your birth day: ", 1, 31);
        int birthhour = 0;
        birthhour = getRangedInt(in, "Enter your birth hour: ", 1, 24);
        int birthminute = 0;
        birthminute = getRangedInt(in, "Enter your birth minute: ", 1, 59);
        System.out.println("You were born on " + birthday + " " + birthmonth + " " + birthyear + " at hour " + birthhour + " and minute " + birthminute);


        double rangeddouble = 0.0;
        double total = 0.0;
        rangeddouble = getRangedDouble(in, "Enter the price of your item between $0.50 and $10.00, do not include the $: ", 0.50, 10.00);
        System.out.println("Your total is: $" + rangeddouble);
        total += rangeddouble;
        boolean YN = false;
        YN = getYNConfirm(in, "Do you have more items? Y or N");
        while (YN == true) {
            rangeddouble = getRangedDouble(in, "Enter the price of your item between $0.50 and $10.00, do not include the $: ", 0.50, 10.00);
            System.out.println("Your price is: $" + rangeddouble);
            total += rangeddouble;
            System.out.println("Your total is: $" + total);
            YN = getYNConfirm(in, "Do you have more items? Y or N");
        }
        System.out.println("You owe: $" + total);

        String ssn = " ";
        ssn = getRegExString(in, "Enter your SSN","^\\d{3}-\\d{2}-\\d{4}$");
        String UCM = " ";
        UCM = getRegExString(in, "Enter your UC Student M", "^(M|m)\\d{5}$");
        String OPVQ = " ";
        OPVQ = getRegExString(in, "Choose a method: Open (O), Save (S), View (V), Quit (Q)", "^[OoSsVvQq]$" );
        if (OPVQ.equals("O")) {
            System.out.println("Redirecting to main page...");
        } else if (OPVQ.equals("S")) {
            System.out.println("Entries have been saved");
        } else if (OPVQ.equals("V")) {
            System.out.println("Your SSN is: " + ssn + " Your UC Student M is: " + UCM);
        } else if (OPVQ.equals("Q")) {
            System.out.println("Quitting to main page...");
        }

        String head = " ";
       // head = SafeInput.getNonZeroLenString(in, "Enter your message");


        final int WIDTH = 60;  // total header width
        int starsOnEachSide = 3;  // fixed number of stars on each side
        int msgLength = head.length();

        // Calculate the total space available for centering the message
        int totalSpace = WIDTH - (starsOnEachSide * 2) - msgLength;
        int leftSpaces = totalSpace / 2;
        int rightSpaces = totalSpace - leftSpaces;

        // 1. Print the top border (60 stars)
        for (int i = 0; i < WIDTH; i++) {
            System.out.print("*");
        }
        System.out.println();

        // 2. Print the middle line: *** centered message ***
        for (int i = 0; i < starsOnEachSide; i++) {
            System.out.print("*");
        }
        for (int i = 0; i < leftSpaces; i++) {
            System.out.print(" ");
        }
        System.out.print(head);
        for (int i = 0; i < rightSpaces; i++) {
            System.out.print(" ");
        }
        for (int i = 0; i < starsOnEachSide; i++) {
            System.out.print("*");
        }
        System.out.println();

        // 3. Print the bottom border (60 stars)
        for (int i = 0; i < WIDTH; i++) {
            System.out.print("*");
        }
        System.out.println();

        double temperature = 0;
        temperature = gettemperature(in, "Enter a Celsius temperature: ");
        temperature = (temperature * 1.8) + 32;
        System.out.println("Your C temperature in F is: " + temperature);


        System.out.printf("%-10s %-10s%n", "Celsius", "Fahrenheit");
        System.out.println("----------------------");

        for (int celsius = -100; celsius <= 100; celsius++) {

            double fahrenheit = (celsius * 9.0 / 5.0) + 32;

            System.out.printf("%-10d %-10.2f%n", celsius, fahrenheit);
        }
    }

    public static double gettemperature(Scanner pipe, String prompt) {
        double value = 0.0;
        boolean valid = false;

        do {
            System.out.print(prompt);

            if (pipe.hasNextDouble()) {

                value = pipe.nextDouble();
                valid = true;
            }


            pipe.nextLine();

        } while (!valid);

        return value;
    }

    public static int getInt(Scanner pipe, String prompt) {
        int value = 0;
        boolean valid = false;

        do {
            System.out.print(prompt);

            if (pipe.hasNextInt()) {

                value = pipe.nextInt();
                valid = true;
            }


            pipe.nextLine();

        } while (!valid);

        return value;
    }

    public static double getDouble(Scanner pipe, String prompt) {
        double value = 0.0;
        boolean valid = false;

        do {
            System.out.print(prompt);

            if (pipe.hasNextDouble()) {

                value = pipe.nextDouble();
                valid = true;
            }


            pipe.nextLine();

        } while (!valid);

        return value;
    }

    public static int getRangedInt(Scanner pipe, String prompt, int low, int high) {
        int value = 0;
        boolean valid = false;

        do {
            System.out.print(prompt + " [" + low + " - " + high + "]: ");

            if (pipe.hasNextInt()) {
                value = pipe.nextInt();

                if (value >= low && value <= high) {
                    valid = true;
                }

            }

            pipe.nextLine();

        } while (!valid);

        return value;
    }
    public static double getRangedDouble(Scanner pipe, String prompt, double low, double high) {
        double value = 0.0;
        boolean valid = false;

        do {
            System.out.print(prompt + " [" + low + " - " + high + "]: ");

            if (pipe.hasNextDouble()) {
                value = pipe.nextDouble();

                if (value >= low && value <= high) {
                    valid = true;
                }

            }

            pipe.nextLine();

        } while (!valid);

        return value;
    }

    public static boolean getYNConfirm(Scanner pipe, String prompt) {
        String response = "";
        boolean valid = false;
        boolean result = false;

        do {
            System.out.print(prompt + " [Y/N]: ");
            response = pipe.nextLine().trim();

            if (response.equalsIgnoreCase("Y")) {
                result = true;
                valid = true;
            } else if (response.equalsIgnoreCase("N")) {
                result = false;
                valid = true;
            }

        } while (!valid);

        return result;
    }
    public static String getRegExString(Scanner pipe, String prompt, String regEx) {
        String input = "";
        boolean valid = false;

        do {
            System.out.print(prompt + ": ");
            input = pipe.nextLine();

            if (input.matches(regEx)) {
                valid = true;
            }

        } while (!valid);

        return input;
    }

}
