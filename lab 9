import java.util.Random;
import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Random random = new Random();
        Scanner in = new Scanner(System.in);
        int[] dataPoints = new int[100];
        int sum = 0;
        int average;
        boolean found;

        for (int i = 0; i < dataPoints.length; i++) {
            dataPoints[i] = random.nextInt(101);
        }
        for (int i = 0; i < dataPoints.length; i++) {
            System.out.print(dataPoints[i] + " | ");
        }
        System.out.println();
        for (int i = 0; i < dataPoints.length; i++) {
            sum += dataPoints[i];
        }
        average = sum / dataPoints.length;

        System.out.println("The sum of dataPoints is " + sum + " and the average is " + average);
        minMax(dataPoints);


        SafeInput.getRangedInt(in, "Pick a number from 1-100", 0, 100);
        int value = in.nextInt();
        found = checkValue(dataPoints, value);
        System.out.println("Is " + value + " present in the array? " + found);
        SafeInput.getRangedInt(in, "Pick a number from 1-100", 0, 100);
        int value2 = in.nextInt();
        findIndex(dataPoints, value2);
        System.out.println("Average of dataPoints is: " + getAverage(dataPoints));

    }

    private static boolean checkValue(int[] arr, int value) {
        for (int element : arr) {
            if (element == value) {
                return true;
            }
        }

        return false;
    }

    public static int findIndex(int[] array, int value) {
        int index = 0;
         if (array.length == index) {
                return -1;
            }
            else if (array[index] == value) {
             System.out.println(value + " is found at index " + index);
             return index;
            }else{
             System.out.println("Your value was not found");
                return 0;
         }
    }
    public static int minMax(int[] array){
        int min = array[0];
        int max = array[0];
        for (int i = 1; i < array.length; i++) {
            if (array[i] < min) min = array[i];
            if (array[i] > max) max = array[i];
        }
        System.out.println("Minimum number of dataPoints is : " + min);
        System.out.println("Maximum number of dataPoints is : " + max);
        return 0;
    }
    public static double getAverage(int[] values){
        int sum = 0;
        for (int i = 0; i < values.length; i++) {
            sum += values[i];
        }
        return sum / values.length;
    }

}


